{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "westus",
            "allowedValues": [
                "Brazil South",
                "brazilsouth",
                "East Asia",
                "eastasia",
                "East US",
                "eastus",
                "Japan East",
                "japaneast",
                "Japan West",
                "japanwest",
                "North Central US",
                "northcentralus",
                "North Europe",
                "northeurope",
                "South Central US",
                "southcentralus",
                "West Europe",
                "westeurope",
                "West US",
                "westus",
                "Southeast Asia",
                "southeastasia",
                "Central US",
                "centralus",
                "East US 2",
                "eastus2"
            ],
            "metadata": {
                "description": "Deployment Location Hint: Use lowercase for creating ipaddress"
            }
        },
        "networkApiVersion": {
            "type": "string",
            "defaultValue": "2015-06-15",
            "metadata": {
                "description": "API Version for the Network Interface Card"
            }
        },
        "networkInterfaceName": {
            "type": "string",
            "defaultValue": "networkInterface",
            "metadata": {
                "description": "Network Interface Name"
            }
        },
        "tag": {
            "type": "object",
            "defaultValue": {
                "key1": "key",
                "value1": "value"
            },
            "metadata": {
                "description": "Tag Values"
            }
        },
        "loadBalancerBkpoolRef": {
            "type": "string",
            "metadata": {
                "description": "Load Balancer Backendpool ID"
            }
        },
        "subnetRef": {
            "type": "string",
            "metadata": {
                "description": "Subnet id "
            }
        },
        "publicIPAddressName": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "[parameters('networkApiVersion')]",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[parameters('networkInterfaceName')]",
            "location": "[parameters('location')]",
            "tags": {
                "[parameters('tag').key1]": "[parameters('tag').value1]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('publicIPAddressName'))]"
                            },
                            "subnet": {
                                "id": "[parameters('subnetRef')]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[parameters('loadBalancerBkpoolRef')]"
                                }
                            ]
                        }
                    }
                ]
            }
        }
    ]
}